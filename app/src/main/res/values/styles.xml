<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Notitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="rg_main_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
<!--  xmlns:app="http://schemas.android.com/apk/res-auto"-->

    <style name="tabLayout" >

        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">40dp</item>
        <item name="carillegalquery.carillegalquery:tabMinWidth">60dp</item>
        <item name="carillegalquery.carillegalquery:tabIndicatorColor">@color/tabLayoutSelectColor</item>
        <item name="carillegalquery.carillegalquery:tabMode">scrollable</item>
        <item name="carillegalquery.carillegalquery:tabSelectedTextColor">@color/tabLayoutSelectColor</item>

    </style>

        <style name="viewPager">
            <item name="android:layout_width">match_parent</item>

        </style>

    <style name="ShenZhenTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
