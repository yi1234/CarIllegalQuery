<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <ImageView
        android:id="@+id/iv_home_peccancy_img_4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/bj__dna_item_state_selected"/>

    <TextView
        android:id="@+id/tv_home_peccancy_title2"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_home_peccancy_img_4"
        android:layout_toRightOf="@+id/iv_home_peccancy_img_4"
        android:text="好久都觉得离开国家队里感觉了"
        android:textColor="#333232"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_home_peccancy_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_home_peccancy_title2"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_home_peccancy_img_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="好久都觉得离开国家队里感觉了"/>

    <TextView
        android:id="@+id/tv_clubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_home_peccancy_img_4"
        android:layout_toRightOf="@+id/iv_home_peccancy_img_4"
        android:text="晒一晒"
        android:textColor="@color/colorFontSelect"/>

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/iv_home_peccancy_img_4"
        android:layout_toLeftOf="@+id/tv_home_peccancy_msg"
        android:drawableLeft="@mipmap/peccancy__saturn_club_topic_icon_zan"
        android:text="7"/>

    <TextView
        android:id="@+id/tv_home_peccancy_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_home_peccancy_img_4"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/toutiao__message_news_ic_comment"
        android:text="7"/>
</RelativeLayout>