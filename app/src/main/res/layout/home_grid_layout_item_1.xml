<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/gl_home_subs_1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="2"
    >

    <Button
        android:id="@+id/btn_baibaoxiang"
        android:background="@null"
        android:drawableTop="@mipmap/ic_home_gaofadi"
        android:text="百宝箱"/>

    <Button
        android:id="@+id/btn_drive_recorder"
        android:background="@null"
        android:drawableTop="@mipmap/ic_home_drive_recorder"
