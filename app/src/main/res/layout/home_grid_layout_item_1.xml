        android:id="@+id/btn_chezhurenzheng"
        android:background="@null"
        android:drawableTop="@mipmap/toutiao__qctt_home_ic_ppgs"
        android:text="车主认证"/>

    <Button
        android:id="@+id/btn_remenhuodong"
        android:background="@null"
        android:drawableTop="@mipmap/toutiao__qctt_home_ic_sgcl"
        android:text="热门活动"/>

    <Button
        android:id="@+id/btn_youjiangshijia"
        android:background="@null"
        android:drawableTop="@mipmap/ic_home_youjiangshijia"
