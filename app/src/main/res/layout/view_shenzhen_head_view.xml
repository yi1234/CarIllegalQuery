<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <ImageView
        android:src="@mipmap/to_top"
        android:layout_width="50dp"
        android:id="@+id/iv_head_bi"
        android:scaleType="fitXY"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_head_view_location"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/iv_head_bi"
        android:layout_toRightOf="@id/iv_head_bi"
        android:layout_marginLeft="18dp"
        android:text="深圳市"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/shenZhenColorPrimaryDark"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_head_view_member"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/iv_head_bi"
        android:layout_toRightOf="@id/iv_head_bi"
        android:layout_marginLeft="20dp"
        android:text="成员 21.35万"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/shenZhenPrimary"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="话题26.7万"
        android:layout_toRightOf="@id/tv_head_view_member"
        android:textSize="14sp"
        android:layout_alignBottom="@id/tv_head_view_member"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_switch_the_city"
        android:layout_alignTop="@id/tv_head_view_location"
        android:text="切换城市"
        android:textColor="@color/tabLayoutSelectColor"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
</RelativeLayout>