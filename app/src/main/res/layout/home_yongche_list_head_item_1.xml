<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_yongche_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_yongche_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="后多久了肯定就给大家更多见到了国家队到地方大幅度多见到了国家队到地方大幅度多见到了国家队到地方大幅度发的"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/xinshoushanglu"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_home_youhui"
            android:gravity="center"
            android:text="新手上路"/>

        <RadioButton
            android:id="@+id/baoxianzhishi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_home_youhui"
            android:gravity="center"
            android:text="保险知识"/>

        <RadioButton
            android:id="@+id/shiguchuli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_home_youhui"
            android:gravity="center"
            android:text="事故处理"/>

        <RadioButton
            android:id="@+id/jiaotongweizhang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/ic_home_youhui"
            android:gravity="center"
            android:text="交通违章"/>
    </LinearLayout>
</LinearLayout>